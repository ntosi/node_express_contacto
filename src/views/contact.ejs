<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Contacto</title>
    <% include partials/head %>
  </head>
  <body>
    <% include partials/navigation %>

    <div class="container p-5 mt-5">
      <div class="row">
        <div class="col-sm-4 offset-md-4">
          <div class="card animated flipInY">
            <div class="card-header bg-dark text-white text-center ">
              <h3>Contactame</h3>
            </div>
            <div class="card-body">
              <form action="#">
                <div class="form-group">
                  <input class="form-control" type="text" placeholder="Nombre" id="nombre">
                </div>
                <div class="form-group">
                  <textarea class="form-control" name="" cols="30" rows="10" placeholder="Mensaje" id="mensaje"></textarea>
                </div>
                <div class="form-group">
                  <button type="button" id="botonSend" class="btn btn-success btn-block">
                    Enviar <i class="fab fa-whatsapp"></i>
                  </button>
                </div>
              </form>    
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      let boton = document.getElementById('botonSend')
      let nombre = document.getElementById('nombre')
      let mensaje = document.getElementById('mensaje')
      let texto;
      
      boton.addEventListener('click', () => {
        texto = `Hola soy ${nombre.value}, ${mensaje.value}`
        console.log(nombre.value,mensaje.value)
        document.location.href = `https://api.whatsapp.com/send?phone=541136866639&text=${texto}`
      })
    </script>

    <% include partials/footer %>
  </body>
</html>
